#!/bin/sh

case "$1" in
  *.csv)
    csv "$1"
    ;;
  *.lhs|*.hs)
    HsColour "$1"
    ;;
  *.json)
    jq -C . "$1"
    ;;
  *)
    # We don't handle this format.

    if [ -x /usr/local/bin/lesspipe.sh ]; then
      # for Mac, chain to /usr/local
      /usr/local/bin/lesspipe.sh "$1"
      exit $?
    else
      # for Linux, just return 1
      exit 1
    fi
esac

# No further processing by lesspipe necessary
exit 0
