#!/bin/bash

res="$(xrandr --current | grep '^ *[0-9]*x[0-9]* *.*\*' | cut -d\  -f4 | head -1)"

# FIXME: how to find resolution of display kitty will actually launch on?  Or should we force it to launch on a particular display?

case "$res" in
#   3840x2160) exec /usr/bin/kitty -o remember_window_size=no -o initial_window_height=1200 -o initial_window_width=1600 -o font_size=24 "$@";;
          *) exec /usr/bin/kitty -o remember_window_size=no -o initial_window_height=800  -o initial_window_width=1200 -o font_size=12 "$@";;
esac
